pipeline {
    agent any
    tools {
        maven "Maven"
    }
    stages {
        stage('checkout&build') {
            steps {
                sh "mvn package -f StudentWebServiceProject/pom.xml"
            }
        }
        stage('manual approval') {
            steps {
                input "Do you want to deploy to staging environment?"
            }
        }
        stage('deploy') {
            steps {            
                sh "chmod +777 ."
                sh "chmod +777 /var/lib/tomcat9"
                sh "StudentWebServiceProject/target/StudentWebServiceProject-0.0.1-SNAPSHOT.war /var/lib/tomcat9/webapps/MyStudent.war"
            }
        }
    }
}
